<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置透明背景色 -->
    <solid android:color="@color/light_blue" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="@dimen/border_mini"
        android:color="@color/gray_border"/>

    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="@dimen/radius_small"/>

    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="@dimen/padding_slim"
        android:left="@dimen/padding_slim"
        android:right="@dimen/padding_slim"
        android:top="@dimen/padding_slim"/>

</shape>