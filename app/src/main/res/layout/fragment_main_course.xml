<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_units_list"
        android:rowCount="5"
        android:columnCount="1"
        android:orientation="vertical">

        <Button android:id="@+id/btn_unit_exercise"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="单元练习"
            android:textColor="@color/black"
            android:background="@drawable/btn_touch_style"
            android:drawableLeft="@drawable/unit_exercise"
            android:drawablePadding="@dimen/padding_large"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/margin_middle"/>

        <Button
            android:id="@+id/btn_unit_test"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_touch_style"
            android:drawableLeft="@drawable/unit_test"
            android:drawablePadding="@dimen/padding_large"
            android:text="单元测试"
            android:textColor="@color/red"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/margin_middle"/>

        <Button android:id="@+id/btn_words"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="单元练习"
            android:textColor="@color/yellow"
            android:background="@drawable/btn_touch_style"
            android:drawableLeft="@drawable/words"
            android:drawablePadding="@dimen/padding_large"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/margin_middle"/>

        <Button android:id="@+id/btn_quick_review"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="单元练习"
            android:textColor="@color/black"
            android:background="@drawable/btn_touch_style"
            android:drawableLeft="@drawable/quick_review"
            android:drawablePadding="@dimen/padding_large"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/margin_middle"/>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="点击进行跳转"
            android:background="@drawable/btn_touch_style"
            android:layout_gravity="center"
            android:layout_column="0"/>

    </GridLayout>

</ScrollView>

